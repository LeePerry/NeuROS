{
    "nodes" : [{
        "name"      : "control",
        "container" : "neuros_python",
        "plugin"    : "control.py",
        "inputs"    : [{ "name" : "sensor_data",
                         "type" : "std_msgs.msg.Int32" }],
        "outputs"   : [{ "name" : "command",
                         "type" : "std_msgs.msg.Int32"}]
    }, {
        "name"      : "physics",
        "container" : "neuros_gazebo",
        "plugin"    : "physics.py",
        "inputs"    : [{ "name"           : "_sensor_data",
                         "type"           : "std_msgs.msg.Int32",
                         "external_topic" : "/model/elevator/state",
                         "gazebo_type"    : "gz.msgs.Int32" },
                       { "name"           : "command",
                         "type"           : "std_msgs.msg.Int32" }],
        "outputs"   : [{ "name"           : "sensor_data",
                         "type"           : "std_msgs.msg.Int32" },
                       { "name"           : "_command",
                         "type"           : "std_msgs.msg.Int32",
                         "external_topic" : "/model/elevator/cmd",
                         "gazebo_type"    : "gz.msgs.Int32" }],
        "environment" : { "NEUROS_MODEL"  : "elevator.sdf" }
    }],
    "connections" : [{
        "source_node"       : "control",
        "source_output"     : "command",
        "destination_node"  : "physics",
        "destination_input" : "command",
        "discard_limit"     : 0
    }, {
        "source_node"       : "physics",
        "source_output"     : "sensor_data",
        "destination_node"  : "control",
        "destination_input" : "sensor_data",
        "discard_limit"     : 0
    }]
}